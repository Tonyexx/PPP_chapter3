// Exercise.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "stdafx.h"
#include<iostream>
#include<string>
#include<vector>
#include<algorithm>
#include<cmath>
using namespace std;
inline void keep_window_open() { char ch; cin >> ch; }


int main()
{
	cout << "Please enter three integer values\n";
	int val1, val2, val3,val_mid = 0;
	cin >> val1 >> val2 >> val3;
	if (val1 >= val2 )
	{
		if (val3 >= val1)
			cout << val2 << ", " << val1 << ", " << val3;  /*val2<=val1<-val3*/
		else
		{
			if (val3 >= val2)
				cout << val2 << ", " << val3 << ", " << val1; /*val2<=val3<=val1*/
			else
				cout << val3 << ", " << val2 << ", " << val1; /*val3<=val2<=val1*/
		}
	}
	else
	{
		if (val3 > val2)
			cout << val1 << ", " << val2 << ", " << val3;	
		else
		{
			if (val3 < val1)
				cout << val3 << ", " << val1 << ", " << val2;
			else
		     	cout << val1 << ", " << val3 << ", " << val2;			
		}
	}	
	keep_window_open();
}

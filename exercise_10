// exercise_7.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include "stdafx.h"
#include<iostream>
#include<string>
#include<vector>
#include<algorithm>
#include<cmath>
	using namespace std;
	inline void keep_window_open() { char ch; cin >> ch; }


	int main()
	{
		cout << "Please enter an operation followed by two numnbers:\n";
		string operation = "ss";
		double val1, val2,result= 0;

		cin >> operation >> val1 >> val2;
		if (operation == "+" | operation == "plus")
			result = val1 + val2;
		else if (operation == "-" | operation == "minus")
			result = val1 - val2;
		else if (operation == "*" | operation == "mul")
			result = val1*val2;
		else if (operation == "/" | operation == "div")
			result = val1 / val2;
		cout << result<<endl;
		keep_window_open();
	}
